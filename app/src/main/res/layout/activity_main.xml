<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parking_wallpaper_car_main"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/text_parking_size_dialog_fragment"
        style="@style/TitleMainActivityStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_main"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/parking_size_button"
        style="@style/ParkingSizeButtonMainActivityStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_parking_size_button"
        android:text="@string/text_main_activity_parking_size_button_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_parking_size_dialog_fragment" />
    <Button
        android:id="@+id/button_main_parking_reservation"
        style="@style/ParkingSizeButtonMainActivityStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_parking_size_button"
        android:text="@string/text_main_activity_parking_reservation_button_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parking_size_button" />
</androidx.constraintlayout.widget.ConstraintLayout>
