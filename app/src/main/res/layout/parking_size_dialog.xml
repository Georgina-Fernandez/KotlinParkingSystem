<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_dialog_fragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_parking_size_dialog_fragment"
        style="@style/TextParkingSizeDialogFragmentStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_parking_size"
        style="@style/InputParkingSizeDialogFragmentStyle"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_parking_size_dialog_fragment"
        android:importantForAutofill="no"/>

    <Button
        android:id="@+id/button_dialog_fragment_ok"
        style="@style/ParkingButtonDialogFragmentStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_parking_size_dialog_ok"
        app:layout_constraintTop_toBottomOf="@id/input_parking_size"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/button_dialog_fragment_cancel"
        style="@style/ParkingButtonDialogFragmentStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_parking_size_dialog_cancel"
        app:layout_constraintTop_toBottomOf="@id/input_parking_size"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
